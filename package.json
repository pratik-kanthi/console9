{
  "name": "cab9-shortcuts",
  "version": "0.0.1",
  "description": "Cab9 Shortcuts",
  "author": "Pratik <pratik.kanthi@e9ine.com>",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "staging": "vue-cli-service build --mode=staging",
    "lint": "./node_modules/.bin/eslint --ext .vue .",
    "lint-fix": "vue-cli-service lint",
    "deploy:prod": "node scripts/deploy.js --environment=production",
    "deploy:staging": "node scripts/deploy.js --environment=staging",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "postpublish": "git add . && git commit -m 'chore: changelog [ci skip]'"
  },
  "dependencies": {
    "@e9ine/vue-form-plugin": "latest",
    "@e9ine/vue_components": "latest",
    "axios": "^0.19.0",
    "core-js": "^2.6.5",
    "jquery": "^3.4.1",
    "moment": "^2.24.0",
    "v-hotkey": "^0.9.0",
    "vue": "^2.6.10",
    "vue-cookies": "^1.5.13",
    "vue-router": "^3.5.2",
    "vue-sweetalert2": "^2.1.1",
    "vuex": "^3.1.1"
  },
  "devDependencies": {
    "@e9ine/eslint-config-vue": "latest",
    "@gfx/zopfli": "^1.0.14",
    "@tailwindcss/postcss7-compat": "^2.2.4",
    "@vue/cli-plugin-babel": "^3.11.0",
    "@vue/cli-plugin-eslint": "^3.11.0",
    "@vue/cli-service": "^3.11.0",
    "@vue/eslint-plugin": "^4.2.0",
    "autoprefixer": "^9.8.6",
    "babel-eslint": "^10.0.1",
    "compression-webpack-plugin": "^3.1.0",
    "conventional-changelog-cli": "^2.0.31",
    "eslint": "^5.16.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.5.0",
    "eslint-plugin-vue": "^5.0.0",
    "lint-staged": "^9.4.2",
    "node-sass": "^4.12.0",
    "path": "^0.12.7",
    "postcss": "^7.0.36",
    "sass-loader": "^8.0.0",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.2.4",
    "vue-template-compiler": "^2.6.10",
    "yorkie": "^2.0.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "browser": true
    },
    "globals": {
      "$": false
    },
    "extends": [
      "@e9ine/eslint-config-vue"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "prettier --write",
      "vue-cli-service lint",
      "git add"
    ],
    ".env.*": [
      "node scripts/verifyUntrackable.js"
    ]
  },
  "prettier": {
    "semi": true,
    "tabWidth": 4,
    "singleQuote": true,
    "printWidth": 120,
    "jsxBracketSameLine": true
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
